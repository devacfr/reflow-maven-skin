#**
 * Render twitter snippet
 *
 *#
#set($width = "400")##
#set($height = "500")##
#set($theme = "light")##
#set($chrome = "")##
#set($notrack = "true")
#if(${snippet.attrs['nofooter']})
     #set($chrome = "$chrome nofooter")##
#end
#if(${snippet.attrs['noheader']})
     #set($chrome = "$chrome noheader")##
#end
#if(${snippet.attrs['noborders']})
     #set($chrome = "$chrome noborders")##
#end
#if(${snippet.attrs['noscrollbar']})
     #set($chrome = "$chrome noscrollbar")##
#end
#if(${snippet.attrs['transparent']})
     #set($chrome = "$chrome transparent")##
#end
#if(${snippet.attrs['theme']})
     #set($theme = ${snippet.attrs['theme']})##
#end
#if(${snippet.attrs['width']})
     #set($width = ${snippet.attrs['width']})##
#end
#if(${snippet.attrs['height']})
     #set($height = ${snippet.attrs['height']})##
#end
#if(${snippet.attrs['not-track']})
     #set($notrack = ${snippet.attrs['not-track']})##
#end
<a class="twitter-timeline"
#if(${chrome} && ${chrome} != "") data-chrome="${chrome}"#end
    data-width="${width}"
    data-height="${height}"
    data-dnt="${notrack}"
    data-theme="${theme}"
#if(${snippet.attrs['tweet-limit']}) data-tweet-limit="${snippet.attrs['tweet-limit']}"#end
    href="https://twitter.com/${snippet.attrs['feed']}?ref_src=twsrc%5Etfw">$!{snippet.text}</a>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
