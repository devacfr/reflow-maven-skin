#**
 * Render image card
 *
 *#
#macro( render_image )##
#*  *##if( ${snippet.card-image})##
#*      *##if( ${snippet.card-image.html})##
            #render_html( ${snippet.card-image} )
#*      *##else##
    <img src="${snippet.card-image.src}"##
#*          *# class="card-img-${caps}#if( ${snippet.card-image.attrs['class']} ) ${snippet.card-image.attrs['class']}#end"
#*          *# #if( ${snippet.card-image.alt} )alt="${snippet.card-image.alt}"#end>
#*      *##end##
#*  *##end##
#end##
#**
 * Render header card
 *
 *#
#macro( render_header )##
#*  *##if( ${snippet.card-header} && ${snippet.card-header.html})##
#*      *##if( ${snippet.card-header.level})##
    <h${snippet.card-header.level} class="card-header#if( ${snippet.card-header.attrs['class']} ) ${snippet.card-header.attrs['class']}#end">
         #render_html( ${snippet.card-header} )
    </h${snippet.card-header.level}>
#*      *##else##
    <div class="card-header#if( ${snippet.card-header.attrs['class']} ) ${snippet.card-header.attrs['class']}#end">
        #render_html( ${snippet.card-header} )
    </div>
#*      *##end##
#*  *##end##
#end##
#**
 * Render body card
 *
 *#
#macro( render_body )##
#*  *##set( $class = "card-body")
#*  *##if( ${snippet.attrs['img-overlay']} == "true")
#*      *##set( $class = "card-img-overlay")
#*  *##end##
#*  *##if( ${snippet.card-body} && ${snippet.card-body.html})##
    <div class="${class}#if( ${snippet.card-body.attrs['class']} ) ${snippet.card-body.attrs['class']}#end">
        #render_html( ${snippet.card-body} )
    </div>
#*  *##end##
#end##
#**
 * Render footer card
 *
 *#
#macro( render_footer )##
#*  *##if( ${snippet.card-footer} && ${snippet.card-footer.html})##
    <div class="card-footer#if( ${snippet.card-footer.attrs['class']} ) ${snippet.card-footer.attrs['class']}#end">
        #render_html( ${snippet.card-footer} )
    </div>
#*  *##end##
#end##
#**
 * Render card snippet
 *
 *#
#*  *##set( $caps = "top")
#*  *##if( ${snippet.attrs['caps']} == "bottom")
#*      *##set( $caps = "bottom")
#*  *##end##
<div class="card#if( ${snippet.attrs['class']} ) ${snippet.attrs['class']}#end" #if( ${snippet.style} )style="${snippet.style}"#end>
#*  *##if( ${snippet.horizontal} == "true")##
  <div class="row no-gutters">
    <div class="col-md-4">
#*      *##render_image()##
    </div>
    <div class="col-md-8">
#*      *##render_body()##
#*      *##render_footer()##
    </div>
  </div>
#*  *##else
#*      *##render_header()##
#*      *##if( $caps == "top")
#*          *##render_image()##
#*      *##end
#*      *##render_body()##
#*      *##if( $caps == "bottom")
#*          *##render_image()##
#*      *##end
#*      *##render_footer()##
#*  *##end
</div>

