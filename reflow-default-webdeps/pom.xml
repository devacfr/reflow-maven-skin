      <plugin>
        <groupId>com.google.code.maven-replacer-plugin</groupId>
        <artifactId>replacer</artifactId>
        <version>1.5.3</version>
        <executions>
          <execution>
            <id>streamline-font-urls</id>
            <phase>process-resources</phase>
            <goals>
              <goal>replace</goal>
            </goals>
            <configuration>
              <basedir>${project.build.outputDirectory}/css/fontawesome</basedir>
              <includes>
                <include>**/all.min.css</include>
              </includes>
              <replacements>
                <replacement>
                  <token>\(..\/webfonts</token>
                  <value>\(.\/webfonts</value>
                </replacement>
              </replacements>
            </configuration>
          </execution>
